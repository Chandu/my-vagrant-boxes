{
    "rvm": {
        "install_rubies": true,
        "default_ruby": "2.1.0",
        "global_gems": [
            {
                "name": "bundler"
            },
            {
                "name": "rake",
                "version": "0.9.2"
            },
            {
                "name": "rails",
                "version": "4.0.0"
            },
            {
                "name" : "guard"
            }
        ],
        "vagrant" : {
            "system_chef_solo" : "/opt/vagrant_ruby/bin/chef-solo"
        }
    },
    "run_list": [
        "recipe[apt]",
        "recipe[nginx]",
        "recipe[rvm::vagrant]",
        "recipe[rvm::system]",
        "recipe[git]"
    ]
}